<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdvancedLevel">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginBottom="20dp">
           <TextView
               android:id="@+id/scoreCount"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="0"/>

           <TextView
               android:id="@+id/timerViewAdvanced"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="16dp"
               android:layout_marginEnd="16dp"
               android:layout_marginRight="16dp"
               android:layout_marginBottom="8dp" />

       </LinearLayout>

       <TextView
           android:id="@+id/textView4"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/identify_make_text"
           android:layout_gravity="center_horizontal"
           android:textStyle="bold"
           android:textSize="30sp"
           android:textAllCaps="true"
           android:layout_marginBottom="20dp"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:background="@drawable/round_button"
           android:layout_marginBottom="20dp"
           android:gravity="center">

           <ImageView
               android:id="@+id/imageViewOne"
               android:layout_width="155dp"
               android:layout_height="153dp"
               android:layout_margin="16dp"
               tools:srcCompat="@tools:sample/avatars" />

           <EditText
               android:id="@+id/imageOneField"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginEnd="24dp"
               android:layout_marginRight="24dp"
               android:ems="10"
               android:gravity="center_horizontal"
               android:hint="@string/car_manufacture"
               android:inputType="text" />
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:background="@drawable/round_button"
           android:layout_marginBottom="20dp"
           android:gravity="center">
           <ImageView
               android:id="@+id/imageViewTwo"
               android:layout_width="155dp"
               android:layout_height="153dp"
               android:layout_margin="16dp"
               tools:srcCompat="@tools:sample/avatars" />

           <EditText
               android:id="@+id/imageTwoField"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginEnd="24dp"
               android:layout_marginRight="24dp"
               android:ems="10"
               android:gravity="center_horizontal"
               android:hint="@string/car_manufacture"
               android:inputType="text"/>

       </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:background="@drawable/round_button"
          android:layout_marginBottom="20dp"
          android:gravity="center">
          <ImageView
              android:id="@+id/imageViewThree"
              android:layout_width="155dp"
              android:layout_height="153dp"
              android:layout_margin="16dp"
              tools:srcCompat="@tools:sample/avatars" />

          <EditText
              android:id="@+id/imageThreeField"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginEnd="24dp"
              android:layout_marginRight="24dp"
              android:ems="10"
              android:hint="@string/car_manufacture"
              android:inputType="text"
              android:gravity="center_horizontal" />
      </LinearLayout>

       <Button
           android:id="@+id/submitBtn"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginBottom="24dp"
           android:text="@string/submit"
           android:onClick="checkOnSubmit"
           android:layout_gravity="center_horizontal"/>

   </LinearLayout>
</ScrollView>